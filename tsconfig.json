{
    "compilerOptions": {
      "target": "es2017",
      "module": "esnext",
      "moduleResolution": "node",

      "strict": true,
      "noUnusedLocals": true,
      "noFallthroughCasesInSwitch": true,
      "noImplicitReturns": true,

      "inlineSources": true,
      "inlineSourceMap": true,

      "allowSyntheticDefaultImports": true,
      "experimentalDecorators": true,

      "newLine": "lf",

      "declaration": true,
      "outDir": "./dist",
      "jsx": "react"
    }
}
